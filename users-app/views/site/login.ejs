<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css">
    <title>User Log in</title>
</head>

<body>
    <header>
        <%- include('../partials/nav') %>
    </header>
    <div class="container mt-5">
        <h1>User Log in</h1>
        <form method="POST">
            <% if (typeof message != "undefined") { %>
                <div class="alert alert-<%= message.type %>">
                    <%= message.text %>
                </div>
                <% } %>
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" id="email" name="email" class="form-control" required value="<%= typeof email !== 'undefined' ? email : '' %>">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary me-2">Log in</button>
                <a href="/site/users" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</body>

</html>
